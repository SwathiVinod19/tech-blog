<h1>Dashboard</h1>
<section id="existingblogs">
{{#each blogs}}
  <section class="card">
      <a href="/blogs/{{id}}" class="card-body">
        <h3 class="card-title">{{title}}</h3> 
        <h5>Posted on {{createdAt}}</h5>
        <p class="card-text">{{content}}</p>
    </a>
  </section>
{{/each}}
</section>
<section id="createNew" class="card text-center">
  <div class="card-body">
  <h3 class="card-title">Create New Post</h3>
  <form id="newBlog">
    <div class="card-text"></div>
      <label for="title" class="titleFormat">Title</label><br>
      <input type="text" id="title" class="textStyle" placeholder="title">
    </div>
    <div class="card-text"></div>
      <label for="content" id="newPostContent">Content</label>
    <textarea id="content" class="textStyle" placeholder="content"></textarea>
    </div>
    <button id="create">Post it !</button>
</form>
</div>
</section>
<form id="newpost">
    <button id="newPostButton">+ New Post</button>
</form>
<script src="/js/dashboard.js"></script>